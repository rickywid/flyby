.col-md-6.col-md-offset-3
	%h1 New Itinerary
	= simple_form_for @destination do |f|
		%p= f.input :name, input_html: {class: "form-control"}, label: "Name of Country Travelling To"
		%p= f.input :date
		%p= f.input :description, as: :text, input_html: {class: "form-control"}, label: "Trip Notes"
		%h3 Locations
		#locations
			= f.simple_fields_for :locations do |location|
				= render 'location_fields', f: location
			.links
				= link_to_add_association 'add location', f, :locations, class: "btn btn-md btn-success"
		%br
		= f.submit "Add New Itinerary", class: "btn btn-sm btn-success"
		= link_to "Cancel", root_url, class: "btn btn-sm btn-danger"